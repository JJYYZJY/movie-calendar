@import "../assets/star.wxss";

.head-layout{
  width: 100vw;
  height: 40vh;
}

.movie-image{
  width: 100vw;
  height: 40vh;
}

.body-layout{
  width: 100vw;
  height: 60vh;
}

.year-layout{
  display: flex;
  flex-direction: row;
  width: 100vw;
  height: 4vh;
}

.year-text{
  width: 33vw;
  font-size: 30rpx;
  text-align: left;
  padding-left: 10rpx;
}

.month-text{
  width: 34vw;
  font-size: 30rpx;
  text-align: center;
}

.week-text{
  width: 33vw;
  font-size: 30rpx;
  text-align: right;
  padding-right: 10rpx;
}

.center-layout{
  width: 100vw;
  height: 36vh;
  display: flex;
  justify-content:center;
  align-items:center;
}

.date-layout{
  width: 100vw;
  height: fit-content;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.date-text{
  display: block;
  line-height: 240rpx;
  padding: 0px;
  font-size: 240rpx;
}

.date-history-text{
  font-size: 30rpx;
}

.saying-layout{
  width: fit-content;
  margin: 0px auto 0px auto;
  padding: 0rpx  40rpx;
  height: 10vh;
}

.saying-text{
  font-size: 34rpx;
}

.collect-layout{
  width: 100vw;
  height: 10vh;
}

.title-layout{
  height: 30rpx;
}

.title-text{
  font-size: 30rpx;
  display: block;
}

.collect-text{
  display:block;
  margin: 0px;
  padding: 0px;
  font-size: 20rpx;
}

.star-layout{
  padding: 0px;
  margin: 0px;
}

.star-text{
  display:inline-block;
  font-size: 20rpx;
  color:#FFB86C;
}

.rating-layout{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.rating-left-layout{
  padding-left: 10rpx;
}

.rating-right-layout{
  padding-bottom: 20rpx;
  padding-left: 10rpx;
}

.rating-text{
  font-size: 60rpx;
}